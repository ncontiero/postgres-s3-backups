{
  "name": "postgres-s3-backups",
  "type": "module",
  "packageManager": "bun@1.3.1",
  "description": "A simple utility to backup Postgres databases to S3 using Bun.",
  "author": {
    "name": "Nicolas Contiero",
    "url": "https://github.com/ncontiero"
  },
  "license": "MIT",
  "module": "src/index.ts",
  "scripts": {
    "build": "bun build --compile --minify src/index.ts --outfile postgres-s3-backup",
    "start": "bun run src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint && bun run typecheck"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "colorette": "^2.0.20",
    "cron": "^4.3.3",
    "filesize": "^11.0.13",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ncontiero/eslint-config": "6.4.0",
    "@types/bun": "1.3.1",
    "eslint": "^9.38.0"
  }
}
